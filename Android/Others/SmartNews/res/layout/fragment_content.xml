<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <com.hui.news.view.ViewPagerNoScroll
       android:id="@+id/vp_cotent"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"></com.hui.news.view.ViewPagerNoScroll>
    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_tab_bg">
        <RadioButton
            android:id="@+id/tab_home"
            style="@style/TabBottom"
            android:text="主页"
            android:textColor="@drawable/tab_text_color"
            android:drawableTop="@drawable/tab_home" />
        <RadioButton
            android:id="@+id/tab_newscenter"
            style="@style/TabBottom"
            android:text="新闻中心"
            android:textColor="@drawable/tab_text_color"
            android:drawableTop="@drawable/tab_newscenter" />
        <RadioButton
            android:id="@+id/tab_smartservice"
            style="@style/TabBottom"
            android:text="智慧服务"
            android:textColor="@drawable/tab_text_color"
            android:drawableTop="@drawable/tab_smartservice" />
        <RadioButton
            android:id="@+id/tab_govaffairs"
            style="@style/TabBottom"
            android:text="政务"
            android:textColor="@drawable/tab_text_color"
            android:drawableTop="@drawable/tab_govaffairs" />
        <RadioButton
            android:id="@+id/tab_setting"
            style="@style/TabBottom"
            android:text="设置"
            android:textColor="@drawable/tab_text_color"
            android:drawableTop="@drawable/tab_setting" />
    </RadioGroup>
</LinearLayout>