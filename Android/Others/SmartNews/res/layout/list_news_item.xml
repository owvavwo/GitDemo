<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/iv_news_pic"
        android:background="@android:color/darker_gray"
        android:src="@drawable/pic_simple"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_width="140dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_news"
        android:text="blablablablalbalabllblalbalblablalblablalbalbalblablablablbabb"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_news_pic"
        android:layout_marginLeft="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_date"
        android:text="2016/4/19 18:52"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_news"
        android:layout_alignBottom="@+id/iv_news_pic"/>
</RelativeLayout>