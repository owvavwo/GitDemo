<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hui.mobileguard.activity.Setup1Activity">
    
    <TextView
        style="@style/TitleStyle"
        android:text="1.欢迎使用手机防盗卫士"/>
    <TextView
        android:text="您的手机防盗卫士："
        style="@style/ContentStyle"/>
    <TextView
        android:text="SIM卡变更报警"
        style="@style/ContentStyle"
        android:drawableLeft="@android:drawable/star_on"
        android:gravity="center"/>
    <TextView
        android:text="GPS追踪"
        style="@style/ContentStyle"
        android:drawableLeft="@android:drawable/star_on"
        android:gravity="center"/>
    <TextView
        android:text="远程销毁数据"
        style="@style/ContentStyle"
        android:drawableLeft="@android:drawable/star_on"
        android:gravity="center"/>
    <TextView
        android:text="远程锁屏"
        style="@style/ContentStyle"
        android:drawableLeft="@android:drawable/star_on"
        android:gravity="center"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:src="@android:drawable/presence_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/setup1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            style="@style/NextStyle"/>
    </RelativeLayout>
</LinearLayout>
