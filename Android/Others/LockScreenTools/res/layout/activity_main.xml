<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hui.lockscreentools.MainActivity"
    android:gravity="center">
    <Button
        android:id="@+id/btn_activate"
        android:text="激活设备管理器"
        android:onClick="activateDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_lock"
        android:text="一键锁屏"
        android:onClick="lockScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_wipe"
        android:text="擦除数据"
        android:onClick="wipeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_unistall"
        android:text="卸载"
        android:onClick="unistall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
